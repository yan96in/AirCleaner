<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- layout_widthPercent、layout_heightPercent、
layout_marginPercent、layout_marginLeftPercent、
layout_marginTopPercent、layout_marginRightPercent、
layout_marginBottomPercent、layout_marginStartPercent、layout_marginEndPercent。-->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="欢迎使用新松关怀！"
        app:layout_heightPercent="11.2%" />

    <TextView android:id="@+id/tv_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/subtitle"
        android:text="@string/phone_number"

        app:layout_heightPercent="11.2%" />

    <EditText android:id="@+id/et_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="11.2%"
        app:layout_widthPercent="11.2%"
        android:layout_toRightOf="@+id/tv_phone"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/password"
        app:layout_heightPercent="11.2%"
        app:layout_widthPercent="11.2%" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="11.2%"
        app:layout_widthPercent="11.2%" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/register"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="1%" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="忘记密码？"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="1%" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/login"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="1%" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="其他方式登录"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="1%" />

    <ImageButton
        android:id="@+id/ib_weibo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="1%" />

    <ImageButton
        android:id="@+id/ib_qq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="1%" />

    <ImageButton
        android:id="@+id/ib_weixin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="1%" />
</android.support.percent.PercentRelativeLayout>
