<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!-- button的几种美化style-->
    <Button
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <Button
            style="@android:style/Holo.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            style="@android:style/Holo.ButtonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@android:style/Widget.Button.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@android:style/Widget.Button.Toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            style="@android:style/Widget.Button.Inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- test circle img-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_img_shape"
            android:src="@drawable/weixin"/>
        <!-- test circleview-->
        <cn.somputon.aircleaner.utils.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/android"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            android:layout_gravity="center_horizontal" />
        <!-- test-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:layout_toLeftOf="@+id/login_weibo"
                android:background="@drawable/weibo"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/login_weibo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:background="@drawable/qq"

                android:scaleType="centerCrop" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:layout_toRightOf="@id/login_weibo"
                android:background="@drawable/weixin"
                android:scaleType="centerCrop" />

        </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"/>
    </LinearLayout>
</ScrollView>
