<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30" />

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/ListTxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:textColor="@color/gray"
            android:drawableRight="@drawable/preview"
            android:onClick="gotoInputDetail"
            android:text="@string/input_info" />

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_change_password"
            style="@style/NormalTxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:drawableRight="@drawable/preview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"
            android:text="@string/change_password"
            android:textColor="@color/gray"/>

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/NormalTxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:drawableRight="@drawable/preview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"
            android:text="@string/credit_query"
            android:onClick="gotoCreditQuery"
            android:textColor="@color/gray" />

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/NormalTxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:drawableRight="@drawable/preview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"
            android:onClick="gotoGetCredit"
            android:text="@string/credit_obtain"

            android:textColor="@color/gray" />

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/NormalTxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:drawableRight="@drawable/preview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_16dp"
            android:text="@string/correlation_account"
            android:textColor="@color/gray" />

        <include
            layout="@layout/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="715" />
    </LinearLayout>
</LinearLayout>