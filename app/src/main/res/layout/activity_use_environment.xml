<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin">

        <TableRow android:layout_weight="30"></TableRow>

        <include layout="@layout/line" />

        <TableRow android:layout_weight="54">

            <TextView
                style="@style/NormalTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="570"
                android:text="@string/normal_envi" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="65"
                android:adjustViewBounds="true"
                android:src="@drawable/clicked"
                android:visibility="visible" />
        </TableRow>

        <include layout="@layout/line" />

        <TableRow android:layout_weight="54">

            <TextView
                style="@style/NormalTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="570"
                android:text="@string/light_polution" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="65"
                android:adjustViewBounds="true"
                android:src="@drawable/clicked"
                android:visibility="visible" />
        </TableRow>

        <include layout="@layout/line" />

        <TableRow android:layout_weight="54">

            <TextView
                style="@style/NormalTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="570"
                android:text="@string/medium_polution" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="65"
                android:adjustViewBounds="true"
                android:src="@drawable/clicked"
                android:visibility="visible" />
        </TableRow>

        <include layout="@layout/line" />

        <TableRow android:layout_weight="54">

            <TextView
                style="@style/NormalTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="570"
                android:text="@string/heavy_polution" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="65"
                android:adjustViewBounds="true"
                android:src="@drawable/clicked"
                android:visibility="visible" />
        </TableRow>


        <include layout="@layout/line" />

        <TableRow android:layout_weight="545" />

        <TableRow android:layout_weight="84">

            <Button
                style="@style/Btn"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sure" />
        </TableRow>

        <TableRow android:layout_weight="88" />
    </TableLayout>
</LinearLayout>