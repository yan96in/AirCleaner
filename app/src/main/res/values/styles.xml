<resources>
    <!-- 重写toolbar，解决左边留白问题-->
    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 0dp的View -->
    <style name="BaseView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <!-- -->
    <style name="PaddingHorizontal">
        <item name="android:paddingLeft">@dimen/padding_16dp</item>
        <item name="android:paddingRight">@dimen/padding_16dp</item>
    </style>
    <style name="PaddingVertical">
        <item name="android:paddingTop">@dimen/padding_16dp</item>
        <item name="android:paddingBottom">@dimen/padding_16dp</item>
    </style>
    <!-- -->
    <style name="NormalTxt">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_16dp</item>
    </style>
    <!-- -->
    <style name="TitleTxt">
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- -->
    <style name="SubTitleTxt">
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!---->
    <style name="EditText">
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:background">@null</item>
    </style>
    <style name="Btn">
        <item name="android:background">@drawable/btn_shape_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
    </style>
    <!-- -->
    <style name="CustomBtn">
        <item name="android:background">@drawable/btn_shape_null</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
    </style>
    <!-- -->
    <style name="TxtBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
