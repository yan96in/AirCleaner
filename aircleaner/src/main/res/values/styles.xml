<resources>
    <!-- 重写toolbar，解决左边留白问题-->
    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 0dp的View -->
    <style name="BaseView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <!-- -->
    <style name="PaddingHorizontal">
        <item name="android:paddingLeft">@dimen/padding_16dp</item>
        <item name="android:paddingRight">@dimen/padding_16dp</item>
    </style>

    <style name="PaddingVertical">
        <item name="android:paddingTop">@dimen/padding_16dp</item>
        <item name="android:paddingBottom">@dimen/padding_16dp</item>
    </style>
    <!--文本 -->
    <style name="NormalTxt">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- -->
    <style name="TitleTxt">
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- task page sub title-->
    <style name="TaskTxt">
        <item name="android:background">@color/popup_gray</item>
        <item name="android:padding">@dimen/padding_16dp</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>
    <!-- -->
    <style name="TaskSubTxt">
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:paddingLeft">@dimen/padding_16dp</item>
        <item name="android:paddingRight">@dimen/padding_16dp</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <!--Task_child_Txt-->
    <style name="TaskChildTxt">
        <item name="android:paddingLeft">@dimen/padding_33dp</item>
        <item name="android:paddingTop">@dimen/padding_6dp</item>
        <item name="android:paddingBottom">@dimen/padding_6dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>
    <!-- -->
    <style name="SubTitleTxt">
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!---->
    <style name="EditText">
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:background">@null</item>
    </style>


    <style name="ListTxt" parent="NormalTxt">
        <item name="android:paddingLeft">@dimen/padding_16dp</item>
    </style>
    <!--按钮-->
    <style name="BaseButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
    </style>

    <style name="Btn" parent="BaseButtonStyle">
        <item name="android:background">@drawable/shape_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
    </style>
    <!-- -->
    <style name="CustomBtn">
        <item name="android:background">@drawable/shape_white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
    </style>
    <!-- -->
    <style name="TxtBtn">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- popupwindow按钮-->
    <style name="PopupWindowButtonStyle">
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
        <item name="android:textSize">@dimen/txt_21sp</item>
        <item name="android:background">@drawable/shape_popup_window</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <!-- Rank Top Radio Button-->
    <style name="RankTopRadioButton">
        <item name="android:textColor">@color/selector_rank_txt_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_rank_bg_color_top</item>
    </style>
    <!-- test rank-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
